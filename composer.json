{
    "name": "crocone/yii2-cart",
    "description": "Yii2 Shopping cart",
    "type": "yii2-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Semenov",
            "email": "disemx@gmail.com"
        },
        {
            "name": "Igor Chepurnoi",
            "email": "chepurnoi.igor@gmail.com"
        },
        {
            "name": "Evgeny Shevtsov",
            "email": "shevtsov@croc.one"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "yiisoft/yii2": "~2.0.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.0",
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "crocone\\cart\\": ""
        }
    },
    "scripts": {
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
        "phpunit": "phpunit --coverage-text",
        "test": [
            "@phpunit",
            "@phpcs"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
